<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views.SettingsPage"
             Title="Настройки Google Sheets"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             xmlns:converters="clr-namespace:MyApp.Converters">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ConnectionStatusToColorConverter x:Key="ConnectionStatusToColor"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="15" Padding="20">
                <!-- ActivityIndicator для отображения загрузки -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                  IsVisible="{Binding IsBusy}"
                                  Color="{StaticResource Primary}"
                                  HorizontalOptions="Center"/>

                <!-- Остальное содержимое страницы -->
                <Label Text="Текущий сервисный аккаунт" 
                       FontSize="Medium"
                       FontAttributes="Bold"
                       TextColor="Black"/>

                <Label Text="{Binding CurrentServiceAccount}"
                       FontSize="Small"
                       TextColor="Gray"/>

                <Button Text="Загрузить новый credentials.json" 
                        Command="{Binding UploadCredentialsCommand}"
                        HorizontalOptions="FillAndExpand"/>

                <BoxView HeightRequest="1" 
                         BackgroundColor="LightGray"/>

                <Label Text="Ссылка на Google Sheets документ" 
                       FontSize="Medium"
                       FontAttributes="Bold"
                       TextColor="Black"/>

                <Grid>
                    <Editor Text="{Binding SpreadsheetUrl}" 
                            FontSize="Medium"
                            Placeholder="https://..."
                            PlaceholderColor="Gray"
                            AutoSize="TextChanges"
                            TextColor="Black"
                            Completed="Editor_Completed"/>
                </Grid>

                <Label Text="{Binding ConnectionStatus}"
                       FontSize="Small"
                       TextColor="{Binding ConnectionValid, 
                                   Converter={StaticResource ConnectionStatusToColor}}"/>

                <Label Text="Документ должен быть доступен для редактирования через сервисный аккаунт"
                       FontSize="Small"
                       TextColor="Gray"/>

                <Button Text="Открыть документ" 
                        Command="{Binding OpenSpreadsheetCommand}"
                        HorizontalOptions="FillAndExpand"/>

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Button Text="Отмена" 
                            Command="{Binding CancelCommand}" 
                            HorizontalOptions="FillAndExpand"/>
                    <Button Text="Сохранить" 
                            Command="{Binding SaveCommand}" 
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>