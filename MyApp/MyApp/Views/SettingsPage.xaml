<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views.SettingsPage"
             Title="Настройки Google Sheets"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="15" Padding="20">
                <Label Text="Ссылка на Google Sheets документ" 
                       FontSize="Medium"
                       FontAttributes="Bold"/>

                <Entry Text="{Binding SpreadsheetUrl}" 
                       FontSize="Medium"
                       Placeholder="https://docs.google.com/spreadsheets/d/ID_документа/edit"/>

                <Label Text="Документ должен быть доступен для редактирования через сервисный аккаунт"
                       FontSize="Small"
                       TextColor="Gray"/>

                <Button Text="Открыть документ" 
                        Command="{Binding OpenSpreadsheetCommand}"
                        HorizontalOptions="FillAndExpand"
                        Margin="0,10,0,0"/>

                <Button Text="Проверить подключение" 
                        Command="{Binding TestConnectionCommand}"
                        HorizontalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        Margin="0,20,0,0"/>

                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                  IsVisible="{Binding IsBusy}"
                                  Color="{StaticResource Primary}"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center"/>

                <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
                    <Button Text="Отмена" 
                            Command="{Binding CancelCommand}" 
                            HorizontalOptions="FillAndExpand" />
                    <Button Text="Сохранить" 
                            Command="{Binding SaveCommand}" 
                            HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>